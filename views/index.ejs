<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>SMon - SNMP Monitoring Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 text-gray-100 min-h-screen">
  <div class="flex h-screen">
    <!-- Mobile Menu Button -->
    <button id="mobile-menu-button" class="md:hidden fixed top-4 left-4 z-50 bg-slate-800 p-2 rounded-lg border border-slate-700 shadow-lg">
      <i class="fas fa-bars text-white"></i>
    </button>

    <!-- Mobile Overlay -->
    <div id="mobile-overlay" class="md:hidden fixed inset-0 bg-black bg-opacity-50 z-30 hidden"></div>

    <!-- Sidebar -->
    <div id="sidebar" class="w-64 bg-slate-950 border-r border-slate-700 shadow-xl flex flex-col fixed md:relative inset-y-0 left-0 z-40 transform -translate-x-full md:translate-x-0 transition-transform duration-300 ease-in-out">
      <!-- Header -->
      <div class="p-6 border-b border-slate-700">
        <div class="flex items-center gap-3 mb-1">
          <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-blue-600 rounded-lg flex items-center justify-center">
            <i class="fas fa-chart-line text-white font-bold text-lg"></i>
          </div>
          <div>
            <h1 class="text-lg font-bold text-white">SMon</h1>
            <p class="text-xs text-gray-400">SNMP Monitor</p>
          </div>
        </div>
      </div>

      <!-- Navigation -->
      <nav class="flex-1 px-4 py-6 overflow-y-auto">
        <div class="space-y-2">
          <a href="/" class="flex items-center gap-3 px-4 py-3 rounded-lg bg-gradient-to-r from-blue-600 to-blue-700 text-white font-medium transition-all hover:shadow-lg">
            <i class="fas fa-chart-area w-5"></i>
            <span>Dashboard</span>
          </a>
          <a href="/monitoring" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-300 hover:bg-slate-700 transition-all duration-200">
            <i class="fas fa-gauge-high w-5"></i>
            <span>Bandwidth Monitor</span>
          </a>
          <a href="/ping" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-300 hover:bg-slate-700 transition-all duration-200">
            <i class="fas fa-network-wired w-5"></i>
            <span>Ping Monitor</span>
          </a>
          <a href="/devices" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-300 hover:bg-slate-700 transition-all duration-200">
            <i class="fas fa-server w-5"></i>
            <span>Devices</span>
          </a>
          <a href="/settings" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-300 hover:bg-slate-700 transition-all duration-200">
            <i class="fas fa-cog w-5"></i>
            <span>Settings</span>
          </a>
          <a href="/about" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-300 hover:bg-slate-700 transition-all duration-200">
            <i class="fas fa-info-circle w-5"></i>
            <span>About</span>
          </a>
          <a href="/logout" class="flex items-center gap-3 px-4 py-3 rounded-lg text-red-400 hover:bg-red-500/20 hover:text-red-300 transition-all duration-200 mt-4">
            <i class="fas fa-sign-out-alt w-5"></i>
            <span>Logout</span>
          </a>
        </div>
      </nav>

      <!-- Footer -->
      <div class="px-4 py-4 border-t border-slate-700">
        <div class="text-xs text-gray-500 text-center">
          <p>SNMP Monitor v2.0</p>
          <p>Network Intelligence</p>
        </div>
      </div>
    </div>

    <!-- Main Content -->
    <div class="flex-1 overflow-auto">
      <!-- Top Header -->
      <div class="bg-slate-950 border-b border-slate-700 px-4 md:px-8 py-4 sticky top-0 z-10">
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
          <div>
            <h2 class="text-2xl font-bold text-white">Dashboard</h2>
            <p class="text-gray-400 text-sm mt-1">Real-time SNMP Network Monitoring</p>
          </div>
          
          <!-- System Stats -->
          <div class="flex flex-wrap gap-3 text-xs">
            <div class="flex items-center gap-2 bg-slate-800 px-3 py-2 rounded-lg border border-slate-700">
              <i class="fas fa-microchip text-blue-400"></i>
              <div>
                <p class="text-gray-400">CPU</p>
                <p class="text-white font-semibold" id="header-cpu">--%</p>
              </div>
            </div>
            <div class="flex items-center gap-2 bg-slate-800 px-3 py-2 rounded-lg border border-slate-700">
              <i class="fas fa-memory text-green-400"></i>
              <div>
                <p class="text-gray-400">Memory</p>
                <p class="text-white font-semibold" id="header-memory">--</p>
              </div>
            </div>
            <div class="flex items-center gap-2 bg-slate-800 px-3 py-2 rounded-lg border border-slate-700">
              <i class="fas fa-database text-purple-400"></i>
              <div>
                <p class="text-gray-400">Database</p>
                <p class="text-green-400 font-semibold" id="header-db"><i class="fas fa-circle text-xs"></i> Online</p>
              </div>
            </div>
            <div class="flex items-center gap-2 bg-slate-800 px-3 py-2 rounded-lg border border-slate-700">
              <i class="fas fa-hdd text-orange-400"></i>
              <div>
                <p class="text-gray-400">Storage</p>
                <p class="text-white font-semibold" id="header-storage">--</p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Content -->
      <div class="p-8">
        <!-- Quick Stats Cards -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
          <div class="bg-slate-800 rounded-lg p-6 border border-slate-700 hover:border-slate-600 transition-all">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-gray-400 text-sm font-medium">Active Devices</p>
                <p class="text-3xl font-bold text-white mt-2"><%= Object.values(devices).filter(d => d.enabled).length %></p>
              </div>
              <i class="fas fa-server text-blue-500 text-4xl opacity-30"></i>
            </div>
          </div>

          <div class="bg-slate-800 rounded-lg p-6 border border-slate-700 hover:border-slate-600 transition-all">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-gray-400 text-sm font-medium">Total Interfaces</p>
                <p class="text-3xl font-bold text-white mt-2"><%= interfaces.length %></p>
              </div>
              <i class="fas fa-network-wired text-green-500 text-4xl opacity-30"></i>
            </div>
          </div>

          <div class="bg-slate-800 rounded-lg p-6 border border-slate-700 hover:border-slate-600 transition-all">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-gray-400 text-sm font-medium">Ping Targets</p>
                <p class="text-3xl font-bold text-white mt-2"><%= pingTargets.length %></p>
              </div>
              <i class="fas fa-bullseye text-yellow-500 text-4xl opacity-30"></i>
            </div>
          </div>

          <div class="bg-slate-800 rounded-lg p-6 border border-slate-700 hover:border-slate-600 transition-all">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-gray-400 text-sm font-medium">Status</p>
                <p class="text-3xl font-bold text-green-400 mt-2">Operational</p>
              </div>
              <i class="fas fa-check-circle text-green-500 text-4xl opacity-30"></i>
            </div>
          </div>
        </div>

        <!-- Ping Targets Overview -->
        <div class="bg-slate-800 rounded-lg border border-slate-700 p-6 shadow-lg mb-8">
          <div class="flex justify-between items-center mb-6">
            <h3 class="text-lg font-bold text-white flex items-center gap-2">
              <i class="fas fa-network-wired text-yellow-500"></i>
              Ping Monitoring Status
            </h3>
            <a href="/ping" class="text-sm text-blue-400 hover:text-blue-300 transition-colors">
              View Details <i class="fas fa-arrow-right ml-1"></i>
            </a>
          </div>
          
          <% if (pingTargets.length === 0) { %>
            <div class="text-center py-8 text-gray-400">
              <i class="fas fa-network-wired text-5xl mb-4 opacity-20"></i>
              <p class="text-sm">No ping targets configured yet.</p>
              <a href="/ping" class="inline-block mt-4 px-6 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg text-sm transition-all">
                <i class="fas fa-plus mr-2"></i>Add Ping Target
              </a>
            </div>
          <% } else { %>
            <!-- Ping Targets by Group -->
            <div class="space-y-4">
              <% Object.entries(groupedPingTargets).forEach(([group, targets]) => { %>
                <div class="bg-slate-700 rounded-lg p-4">
                  <h4 class="text-sm font-semibold text-white mb-3 flex items-center gap-2">
                    <i class="fas fa-folder text-blue-400"></i>
                    <%= group %>
                    <span class="text-xs text-gray-400 font-normal">(<%= targets.length %> targets)</span>
                  </h4>
                  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-3">
                    <% targets.forEach(target => { %>
                      <div class="bg-slate-800 rounded-lg p-3 border border-slate-600 ping-target-card" data-target-id="<%= target.id %>">
                        <div class="flex items-start justify-between mb-2">
                          <div class="flex-1">
                            <p class="font-medium text-white text-sm"><%= target.name %></p>
                            <p class="text-xs text-gray-400 mt-1"><%= target.host %></p>
                          </div>
                          <div class="status-indicator ml-2">
                            <i class="fas fa-circle-notch fa-spin text-gray-400 text-xs"></i>
                          </div>
                        </div>
                        <div class="flex items-center justify-between mt-3 pt-2 border-t border-slate-600">
                          <div class="text-xs">
                            <span class="text-gray-400">Latency:</span>
                            <span class="latency text-white font-medium ml-1">--</span>
                          </div>
                          <div class="text-xs">
                            <span class="text-gray-400">Loss:</span>
                            <span class="packet-loss text-white font-medium ml-1">--</span>
                          </div>
                        </div>
                      </div>
                    <% }); %>
                  </div>
                </div>
              <% }); %>
            </div>
          <% } %>
        </div>

        <!-- Main Content -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
          <!-- Devices Overview -->
          <div class="lg:col-span-2">
            <!-- Device Cards -->
            <div class="bg-slate-800 rounded-lg border border-slate-700 p-6 shadow-lg mb-8">
              <h3 class="text-lg font-bold text-white mb-6 flex items-center gap-2">
                <i class="fas fa-server text-blue-500"></i>
                Monitored Devices
              </h3>
              
              <div class="space-y-3">
                <% Object.entries(devices).forEach(([deviceId, device]) => { %>
                  <a href="/monitoring?device=<%= deviceId %>" class="flex items-center justify-between p-4 bg-slate-700 hover:bg-slate-600 rounded-lg transition-all duration-200 cursor-pointer">
                    <div>
                      <p class="font-medium text-white"><%= device.name %></p>
                      <p class="text-sm text-gray-400"><%= device.host %> â€¢ <%= device.selectedInterfaces ? device.selectedInterfaces.length : 0 %> interfaces selected</p>
                    </div>
                    <div class="text-right">
                      <p class="text-xs text-green-400 mb-1"><i class="fas fa-circle text-green-500 mr-1"></i>Online</p>
                      <i class="fas fa-arrow-right text-gray-400 text-lg"></i>
                    </div>
                  </a>
                <% }); %>
              </div>
            </div>

            <!-- Selected Interfaces by Device -->
            <div class="bg-slate-800 rounded-lg border border-slate-700 p-6 shadow-lg">
              <h3 class="text-lg font-bold text-white mb-6 flex items-center gap-2">
                <i class="fas fa-network-wired text-green-500"></i>
                Selected Interfaces
              </h3>
              
              <div class="space-y-6">
                <% 
                  let totalInterfaces = 0;
                  Object.entries(devices).forEach(([deviceId, device]) => { 
                    totalInterfaces += (device.selectedInterfaces ? device.selectedInterfaces.length : 0);
                %>
                  <div class="pb-6 border-b border-slate-700 last:border-b-0 last:pb-0">
                    <p class="font-medium text-white mb-3 text-sm"><%= device.name %> <span class="text-xs text-gray-400">(<%= device.selectedInterfaces ? device.selectedInterfaces.length : 0 %>)</span></p>
                    <div class="flex flex-wrap gap-2">
                      <% if (device.selectedInterfaces && device.selectedInterfaces.length > 0) { %>
                        <% device.selectedInterfaces.slice(0, 8).forEach(iface => { %>
                          <span class="px-3 py-1 bg-slate-700 rounded-full text-xs text-gray-300 border border-slate-600">
                            <i class="fas fa-check-circle text-green-400 mr-1"></i><%= typeof iface === 'string' ? iface : iface.name %>
                          </span>
                        <% }); %>
                        <% if (device.selectedInterfaces.length > 8) { %>
                          <span class="px-3 py-1 bg-slate-700 rounded-full text-xs text-gray-400 border border-slate-600">
                            +<%= device.selectedInterfaces.length - 8 %> more
                          </span>
                        <% } %>
                      <% } else { %>
                        <span class="px-3 py-1 bg-slate-700 rounded-full text-xs text-gray-400 italic border border-slate-600">No interfaces</span>
                      <% } %>
                    </div>
                  </div>
                <% }); %>
              </div>
            </div>
          </div>

          <!-- Sidebar Info -->
          <div class="space-y-6">
            <!-- System Informations -->
            <div class="bg-slate-800 rounded-lg border border-slate-700 p-6 shadow-lg">
              <h3 class="text-lg font-bold text-white mb-4 flex items-center gap-2">
                <i class="fas fa-info-circle text-blue-500"></i>
                System Informations
              </h3>
              <div class="space-y-4 text-sm">
                <!-- System Name -->
                <div>
                  <p class="text-gray-400">System Name</p>
                  <p class="font-medium text-white">SNMP Monitor</p>
                </div>

                <!-- Version -->
                <div class="border-t border-slate-700 pt-3">
                  <p class="text-gray-400">Version</p>
                  <p class="font-medium text-white">v2.0</p>
                </div>

                <!-- Node.js Version -->
                <div class="border-t border-slate-700 pt-3">
                  <p class="text-gray-400">Node.js Version</p>
                  <p class="font-medium text-white" id="node-version">Loading...</p>
                </div>

                <!-- Platform -->
                <div class="border-t border-slate-700 pt-3">
                  <p class="text-gray-400">Platform</p>
                  <p class="font-medium text-white" id="platform">Loading...</p>
                </div>

                <!-- Memory Usage -->
                <div class="border-t border-slate-700 pt-3">
                  <p class="text-gray-400">Memory Usage</p>
                  <div class="mt-2">
                    <div class="flex justify-between text-xs text-gray-400 mb-1">
                      <span id="memory-used">0 MB</span>
                      <span id="memory-total">0 MB</span>
                    </div>
                    <div class="w-full bg-slate-700 rounded-full h-2">
                      <div class="bg-gradient-to-r from-blue-500 to-blue-600 h-2 rounded-full transition-all duration-300" id="memory-bar" style="width: 0%"></div>
                    </div>
                  </div>
                </div>

                <!-- CPU Usage -->
                <div class="border-t border-slate-700 pt-3">
                  <p class="text-gray-400">CPU Usage</p>
                  <div class="mt-2">
                    <div class="flex justify-between text-xs text-gray-400 mb-1">
                      <span id="cpu-usage">0%</span>
                      <span id="cpu-cores">0 cores</span>
                    </div>
                    <div class="w-full bg-slate-700 rounded-full h-2">
                      <div class="bg-gradient-to-r from-green-500 to-green-600 h-2 rounded-full transition-all duration-300" id="cpu-bar" style="width: 0%"></div>
                    </div>
                  </div>
                </div>

                <!-- System Uptime -->
                <div class="border-t border-slate-700 pt-3">
                  <p class="text-gray-400">System Uptime</p>
                  <p class="font-medium text-white" id="system-uptime">Loading...</p>
                </div>

                <!-- Database Status -->
                <div class="border-t border-slate-700 pt-3">
                  <p class="text-gray-400">Database Status</p>
                  <p class="font-medium text-green-400"><i class="fas fa-circle text-green-500 mr-2"></i>Connected</p>
                </div>

                <!-- Status -->
                <div class="border-t border-slate-700 pt-3">
                  <p class="text-gray-400">Monitoring Status</p>
                  <p class="font-medium text-green-400"><i class="fas fa-circle text-green-500 mr-2"></i>Operational</p>
                </div>

                <!-- Last Updated -->
                <div class="border-t border-slate-700 pt-3">
                  <p class="text-gray-400">Last Updated</p>
                  <p class="font-medium text-white text-xs" id="last-update">-</p>
                </div>
              </div>
            </div>

            <!-- Quick Actions -->
            <div class="bg-slate-800 rounded-lg border border-slate-700 p-6 shadow-lg">
              <h3 class="text-lg font-bold text-white mb-4 flex items-center gap-2">
                <i class="fas fa-bolt text-yellow-500"></i>
                Quick Actions
              </h3>
              <div class="space-y-2">
                <a href="/monitoring" class="block w-full px-4 py-2 bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white rounded-lg text-center text-sm font-medium transition-all duration-200">
                  <i class="fas fa-chart-line mr-2"></i>View Bandwidth
                </a>
                <a href="/devices" class="block w-full px-4 py-2 bg-slate-700 hover:bg-slate-600 text-white rounded-lg text-center text-sm transition-all">
                  <i class="fas fa-edit mr-2"></i>Manage Devices
                </a>
                <a href="/settings" class="block w-full px-4 py-2 bg-slate-700 hover:bg-slate-600 text-white rounded-lg text-center text-sm transition-all">
                  <i class="fas fa-cog mr-2"></i>Settings
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Ping monitoring state
    let pingTargets = <%- JSON.stringify(pingTargets) %>;
    let isPingMonitoring = false;
    let pingInterval = <%= settings.pingInterval ? settings.pingInterval : 60000 %>;

    // Update last updated time
    function updateLastUpdateTime() {
      document.getElementById('last-update').textContent = new Date().toLocaleString();
    }

    // Perform ping test for dashboard
    async function performDashboardPing(target) {
      try {
        const response = await fetch('/api/ping-test', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ host: target.host, targetId: target.id })
        });
        
        const result = await response.json();
        
        if (result.success) {
          updatePingCard(target.id, result);
        }
      } catch (error) {
        console.error(`Error pinging ${target.name}:`, error);
        updatePingCardError(target.id);
      }
    }

    // Update ping card with result
    function updatePingCard(targetId, result) {
      const card = document.querySelector(`[data-target-id="${targetId}"]`);
      if (!card) return;
      
      const statusIndicator = card.querySelector('.status-indicator');
      const latency = card.querySelector('.latency');
      const packetLoss = card.querySelector('.packet-loss');
      
      if (result.alive) {
        statusIndicator.innerHTML = '<i class="fas fa-circle text-green-500 text-xs"></i>';
        latency.textContent = result.time !== 'unknown' ? `${result.time} ms` : '--';
        latency.className = result.time > 100 ? 'latency text-yellow-400 font-medium ml-1' : 'latency text-green-400 font-medium ml-1';
        packetLoss.textContent = result.packetLoss ? `${result.packetLoss}%` : '0%';
      } else {
        statusIndicator.innerHTML = '<i class="fas fa-circle text-red-500 text-xs"></i>';
        latency.textContent = 'Timeout';
        latency.className = 'latency text-red-400 font-medium ml-1';
        packetLoss.textContent = '100%';
      }
    }

    // Update ping card with error
    function updatePingCardError(targetId) {
      const card = document.querySelector(`[data-target-id="${targetId}"]`);
      if (!card) return;
      
      const statusIndicator = card.querySelector('.status-indicator');
      const latency = card.querySelector('.latency');
      const packetLoss = card.querySelector('.packet-loss');
      
      statusIndicator.innerHTML = '<i class="fas fa-circle text-gray-500 text-xs"></i>';
      latency.textContent = 'Error';
      latency.className = 'latency text-gray-400 font-medium ml-1';
      packetLoss.textContent = '--';
    }

    // Start ping monitoring for dashboard
    function startDashboardPingMonitoring() {
      if (isPingMonitoring || pingTargets.length === 0) return;
      
      isPingMonitoring = true;
      
      // Initial ping
      pingTargets.forEach(target => {
        if (target.enabled) {
          performDashboardPing(target);
        }
      });
      
      // Periodic ping
      setInterval(() => {
        pingTargets.forEach(target => {
          if (target.enabled) {
            performDashboardPing(target);
          }
        });
      }, pingInterval);
    }

    // Update system information
    function updateSystemInfo() {
      // Get basic system info
      fetch('/api/system-info')
        .then(response => response.json())
        .then(data => {
          // Update sidebar system info
          document.getElementById('node-version').textContent = data.nodeVersion;
          document.getElementById('platform').textContent = data.platform;
          document.getElementById('system-uptime').textContent = data.uptime;
          document.getElementById('cpu-cores').textContent = data.cpuCores + ' cores';

          // Update memory
          const memoryUsed = (data.memory.used / 1024 / 1024).toFixed(0);
          const memoryTotal = (data.memory.total / 1024 / 1024).toFixed(0);
          const memoryPercent = (data.memory.used / data.memory.total * 100).toFixed(1);

          document.getElementById('memory-used').textContent = memoryUsed + ' MB';
          document.getElementById('memory-total').textContent = memoryTotal + ' MB';
          document.getElementById('memory-bar').style.width = memoryPercent + '%';

          // Update CPU
          document.getElementById('cpu-usage').textContent = data.cpuUsage + '%';
          document.getElementById('cpu-bar').style.width = data.cpuUsage + '%';
          
          // Update header stats
          if (document.getElementById('header-cpu')) {
            document.getElementById('header-cpu').textContent = data.cpuUsage + '%';
          }
          if (document.getElementById('header-memory')) {
            const memUsedGB = (data.memory.used / 1024 / 1024 / 1024).toFixed(1);
            const memTotalGB = (data.memory.total / 1024 / 1024 / 1024).toFixed(1);
            document.getElementById('header-memory').textContent = `${memUsedGB}/${memTotalGB}GB`;
          }
          if (document.getElementById('header-storage') && data.storage) {
            const storageUsedGB = (data.storage.used / 1024 / 1024 / 1024).toFixed(1);
            const storageTotalGB = (data.storage.total / 1024 / 1024 / 1024).toFixed(1);
            document.getElementById('header-storage').textContent = `${storageUsedGB}/${storageTotalGB}GB`;
          }
        })
        .catch(err => {
          console.error('Error fetching system info:', err);
          // Fallback values
          document.getElementById('memory-total').textContent = memoryTotal + ' MB';
          document.getElementById('memory-bar').style.width = memoryPercent + '%';

          // Update CPU
          document.getElementById('cpu-usage').textContent = data.cpuUsage + '%';
          document.getElementById('cpu-bar').style.width = data.cpuUsage + '%';
        })
        .catch(err => {
          console.error('Error fetching system info:', err);
          // Fallback values
          document.getElementById('node-version').textContent = 'Unknown';
          document.getElementById('platform').textContent = 'Unknown';
          document.getElementById('system-uptime').textContent = 'Unknown';
          document.getElementById('cpu-cores').textContent = 'Unknown';
        });
    }

    // Initialize
    document.addEventListener('DOMContentLoaded', function() {
      const mobileMenuButton = document.getElementById('mobile-menu-button');
      const sidebar = document.getElementById('sidebar');
      const mobileOverlay = document.getElementById('mobile-overlay');

      // Mobile menu toggle
      mobileMenuButton.addEventListener('click', function() {
        sidebar.classList.toggle('-translate-x-full');
        mobileOverlay.classList.toggle('hidden');
      });

      // Close sidebar when clicking overlay
      mobileOverlay.addEventListener('click', function() {
        sidebar.classList.add('-translate-x-full');
        mobileOverlay.classList.add('hidden');
      });

      updateLastUpdateTime();
      updateSystemInfo();
      startDashboardPingMonitoring();

      // Update every minute
      setInterval(updateLastUpdateTime, 60000);
      setInterval(updateSystemInfo, 30000); // Update system info every 30 seconds
    });
  </script>
