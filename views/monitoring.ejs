  <script>
    // Toast notification system
    function showToast(message, type = 'info', duration = 3000) {
      const toastContainer = document.getElementById('toast-container');

      const toast = document.createElement('div');
      toast.className = `flex items-center p-4 rounded-lg shadow-lg transform transition-all duration-300 translate-x-full max-w-sm`;

      let iconClass = '';
      let bgColor = '';

      switch(type) {
        case 'success':
          iconClass = 'fas fa-check-circle';
          bgColor = 'bg-green-500';
          break;
        case 'error':
          iconClass = 'fas fa-exclamation-circle';
          bgColor = 'bg-red-500';
          break;
        case 'warning':
          iconClass = 'fas fa-exclamation-triangle';
          bgColor = 'bg-yellow-500';
          break;
        default:
          iconClass = 'fas fa-info-circle';
          bgColor = 'bg-blue-500';
      }

      toast.classList.add(bgColor, 'text-white');

      toast.innerHTML = `
        <i class="${iconClass} mr-3"></i>
        <span class="flex-1">${message}</span>
        <button onclick="this.parentElement.remove()" class="ml-3 hover:opacity-75">
          <i class="fas fa-times"></i>
        </button>
      `;

      toastContainer.appendChild(toast);

      // Animate in
      setTimeout(() => {
        toast.classList.remove('translate-x-full');
      }, 10);

      // Auto remove
      setTimeout(() => {
        toast.classList.add('translate-x-full');
        setTimeout(() => {
          if (toast.parentElement) {
            toast.remove();
          }
        }, 300);
      }, duration);
    }

    let currentDevice = '<%= selectedDevice %>';
    let selectedInterfaces = [];
    let chartInstances = {}; // Store chart instances for cleanup

    // Initialize on page load
    document.addEventListener('DOMContentLoaded', function() {
      const deviceSelector = document.getElementById('device-selector');
      const timeRangeSelector = document.getElementById('time-range-selector');
      const mobileMenuButton = document.getElementById('mobile-menu-button');
      const sidebar = document.getElementById('sidebar');
      const mobileOverlay = document.getElementById('mobile-overlay');

      // Mobile menu toggle
      mobileMenuButton.addEventListener('click', function() {
        sidebar.classList.toggle('-translate-x-full');
        mobileOverlay.classList.toggle('hidden');
      });

      // Close sidebar when clicking overlay
      mobileOverlay.addEventListener('click', function() {
        sidebar.classList.add('-translate-x-full');
        mobileOverlay.classList.add('hidden');
      });

      // Load interfaces when device changes
      deviceSelector.addEventListener('change', function() {
        currentDevice = this.value;
        if (currentDevice) {
          loadInterfaces(currentDevice);
        }
      });

      // Show/hide custom date inputs
      timeRangeSelector.addEventListener('change', function() {
        const customFromDiv = document.getElementById('custom-date-from');
        const customToDiv = document.getElementById('custom-date-to');
        
        if (this.value === 'custom') {
          customFromDiv.classList.remove('hidden');
          customToDiv.classList.remove('hidden');
        } else {
          customFromDiv.classList.add('hidden');
          customToDiv.classList.add('hidden');
        }
      });

      // Load initial device if available
      if (currentDevice) {
        deviceSelector.value = currentDevice;
        loadInterfaces(currentDevice);
      }
    });

    function loadInterfaces(deviceId) {
      fetch(`/api/devices/${deviceId}/interfaces`)
        .then(response => response.json())
        .then(interfaces => {
          const selector = document.getElementById('interface-selector');
          const currentValue = selector.value;
          selector.innerHTML = '<option value="all">All Selected Interfaces</option>';
          
          // Get selected interfaces from config
          fetch('/api/devices')
            .then(r => r.json())
            .then(devices => {
              const device = devices[deviceId];
              if (device && device.selectedInterfaces) {
                selectedInterfaces = device.selectedInterfaces;
                
                // Convert to array of names for compatibility (support both old and new format)
                const selectedNames = selectedInterfaces.map(i => typeof i === 'string' ? i : i.name);
                
                // Show only selected interfaces in dropdown
                interfaces.forEach(iface => {
                  if (selectedNames.includes(iface.name)) {
                    const option = document.createElement('option');
                    option.value = iface.name;
                    option.textContent = iface.name;
                    selector.appendChild(option);
                  }
                });
              }
            });
          
          selector.value = currentValue || 'all';
        })
        .catch(err => console.error('Error loading interfaces:', err));
    }

    function createInterfaceChart(interfaceName, rxData, txData) {
      const container = document.getElementById('charts-container');
      
      // Clear placeholder if first chart
      if (container.children.length === 1 && container.children[0].classList.contains('col-span-full')) {
        container.innerHTML = '';
      }
      
      const chartIdRx = `chart-${interfaceName.replace(/\s+/g, '-')}-rx`;
      const chartIdTx = `chart-${interfaceName.replace(/\s+/g, '-')}-tx`;
      
      // Create RX card
      const cardRx = document.createElement('div');
      cardRx.className = 'bg-slate-800 rounded-lg border border-slate-700 p-6 shadow-lg';
      cardRx.innerHTML = `
        <div class="mb-4">
          <h3 class="text-lg font-bold text-white flex items-center gap-2">
            <i class="fas fa-arrow-down text-green-400"></i>
            ${interfaceName} - RX (Download)
          </h3>
          <p class="text-xs text-gray-400 mt-1">Incoming Bandwidth (Mbps)</p>
        </div>
        <div class="relative" style="height: 280px;">
          <canvas id="${chartIdRx}"></canvas>
        </div>
      `;
      container.appendChild(cardRx);
      
      // Create TX card
      const cardTx = document.createElement('div');
      cardTx.className = 'bg-slate-800 rounded-lg border border-slate-700 p-6 shadow-lg';
      cardTx.innerHTML = `
        <div class="mb-4">
          <h3 class="text-lg font-bold text-white flex items-center gap-2">
            <i class="fas fa-arrow-up text-amber-400"></i>
            ${interfaceName} - TX (Upload)
          </h3>
          <p class="text-xs text-gray-400 mt-1">Outgoing Bandwidth (Mbps)</p>
        </div>
        <div class="relative" style="height: 280px;">
          <canvas id="${chartIdTx}"></canvas>
        </div>
      `;
      container.appendChild(cardTx);
      
      // Destroy old charts if exist
      if (chartInstances[chartIdRx]) {
        chartInstances[chartIdRx].destroy();
      }
      if (chartInstances[chartIdTx]) {
        chartInstances[chartIdTx].destroy();
      }
      
      // Create RX chart (green line)
      const ctxRx = document.getElementById(chartIdRx).getContext('2d');
      chartInstances[chartIdRx] = new Chart(ctxRx, {
        type: 'line',
        data: {
          datasets: [{
            label: 'RX Bandwidth',
            data: rxData.map(d => ({
              x: new Date(d.time).getTime(),
              y: parseFloat(d.value)
            })),
            borderColor: '#10b981',
            backgroundColor: 'rgba(16, 185, 129, 0.15)',
            borderWidth: 3,
            fill: true,
            tension: 0.3,
            pointRadius: 2,
            pointHoverRadius: 6,
            pointBackgroundColor: '#10b981',
            pointBorderColor: '#ffffff',
            pointBorderWidth: 2
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: {
              display: false
            },
            tooltip: {
              backgroundColor: 'rgba(0, 0, 0, 0.9)',
              titleColor: '#10b981',
              bodyColor: '#ffffff',
              borderColor: '#10b981',
              borderWidth: 2,
              padding: 12,
              displayColors: false,
              callbacks: {
                label: function(context) {
                  const value = context.parsed.y;
                  if (value >= 1) {
                    return 'RX: ' + value.toFixed(2) + ' Mbps';
                  } else if (value >= 0.001) {
                    return 'RX: ' + (value * 1000).toFixed(2) + ' Kbps';
                  } else if (value >= 0.000001) {
                    return 'RX: ' + (value * 1000000).toFixed(0) + ' bps';
                  } else {
                    return 'RX: ' + value.toFixed(8) + ' Mbps';
                  }
                },
                title: function(context) {
                  if (context && context[0]) {
                    const date = new Date(context[0].parsed.x);
                    return date.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) + ' ' + 
                           date.toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit', second: '2-digit', hour12: false });
                  }
                  return '';
                }
              }
            }
          },
          scales: {
            x: {
              type: 'time',
              time: {
                displayFormats: {
                  minute: 'HH:mm',
                  hour: 'MMM dd HH:mm',
                  day: 'MMM dd',
                  week: 'MMM dd'
                },
                tooltipFormat: 'MMM dd, yyyy HH:mm:ss'
              },
              grid: {
                color: 'rgba(100, 116, 139, 0.2)',
                drawBorder: false
              },
              ticks: {
                color: '#94a3b8',
                maxRotation: 45,
                minRotation: 0
              }
            },
            y: {
              beginAtZero: true,
              grid: {
                color: 'rgba(100, 116, 139, 0.2)',
                drawBorder: false
              },
              ticks: {
                color: '#94a3b8',
                callback: function(value) {
                  if (value >= 1) {
                    return value.toFixed(1) + ' Mbps';
                  } else if (value >= 0.001) {
                    return (value * 1000).toFixed(1) + ' Kbps';
                  } else if (value >= 0.000001) {
                    return (value * 1000000).toFixed(0) + ' bps';
                  } else {
                    return value.toFixed(8) + ' Mbps';
                  }
                }
              }
            }
          },
          spanGaps: false
        }
      });
      
      // Create TX chart (orange line)
      const ctxTx = document.getElementById(chartIdTx).getContext('2d');
      chartInstances[chartIdTx] = new Chart(ctxTx, {
        type: 'line',
        data: {
          datasets: [{
            label: 'TX Bandwidth',
            data: txData.map(d => ({
              x: new Date(d.time).getTime(),
              y: parseFloat(d.value)
            })),
            borderColor: '#f59e0b',
            backgroundColor: 'rgba(245, 158, 11, 0.15)',
            borderWidth: 3,
            fill: true,
            tension: 0.3,
            pointRadius: 2,
            pointHoverRadius: 6,
            pointBackgroundColor: '#f59e0b',
            pointBorderColor: '#ffffff',
            pointBorderWidth: 2
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: {
              display: false
            },
            tooltip: {
              backgroundColor: 'rgba(0, 0, 0, 0.9)',
              titleColor: '#f59e0b',
              bodyColor: '#ffffff',
              borderColor: '#f59e0b',
              borderWidth: 2,
              padding: 12,
              displayColors: false,
              callbacks: {
                label: function(context) {
                  const value = context.parsed.y;
                  if (value >= 1) {
                    return 'TX: ' + value.toFixed(2) + ' Mbps';
                  } else if (value >= 0.001) {
                    return 'TX: ' + (value * 1000).toFixed(2) + ' Kbps';
                  } else if (value >= 0.000001) {
                    return 'TX: ' + (value * 1000000).toFixed(0) + ' bps';
                  } else {
                    return 'TX: ' + value.toFixed(8) + ' Mbps';
                  }
                },
                title: function(context) {
                  if (context && context[0]) {
                    const date = new Date(context[0].parsed.x);
                    return date.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) + ' ' + 
                           date.toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit', second: '2-digit', hour12: false });
                  }
                  return '';
                }
              }
            }
          },
          scales: {
            x: {
              type: 'time',
              time: {
                displayFormats: {
                  minute: 'HH:mm',
                  hour: 'MMM dd HH:mm',
                  day: 'MMM dd',
                  week: 'MMM dd'
                },
                tooltipFormat: 'MMM dd, yyyy HH:mm:ss'
              },
              grid: {
                color: 'rgba(100, 116, 139, 0.2)',
                drawBorder: false
              },
              ticks: {
                color: '#94a3b8',
                maxRotation: 45,
                minRotation: 0
              }
            },
            y: {
              beginAtZero: true,
              grid: {
                color: 'rgba(100, 116, 139, 0.2)',
                drawBorder: false
              },
              ticks: {
                color: '#94a3b8',
                callback: function(value) {
                  if (value >= 1) {
                    return value.toFixed(1) + ' Mbps';
                  } else if (value >= 0.001) {
                    return (value * 1000).toFixed(1) + ' Kbps';
                  } else if (value >= 0.000001) {
                    return (value * 1000000).toFixed(0) + ' bps';
                  } else {
                    return value.toFixed(8) + ' Mbps';
                  }
                }
              }
            }
          },
          spanGaps: false
        }
      });
    }

    function loadChartData() {
      if (!currentDevice) {
        showToast('Please select a device', 'warning');
        return;
      }

      const container = document.getElementById('charts-container');
      container.innerHTML = '<div class="col-span-full text-center py-8"><p class="text-gray-400"><i class="fas fa-spinner fa-spin mr-2"></i>Loading data...</p></div>';
      
      const timeRange = document.getElementById('time-range-selector').value;
      let timeRangeParam = timeRange;
      
      if (timeRange === 'custom') {
        const dateFrom = document.getElementById('date-from-input').value;
        const dateTo = document.getElementById('date-to-input').value;
        
        if (!dateFrom || !dateTo) {
          showToast('Please select both From and To dates', 'warning');
          container.innerHTML = '<div class="col-span-full text-center py-12 text-gray-400"><i class="fas fa-chart-line text-4xl mb-4 opacity-50"></i><p>Select device and click "Load Data" to display bandwidth charts</p></div>';
          return;
        }
        
        const startDate = new Date(dateFrom);
        const endDate = new Date(dateTo);
        
        if (startDate >= endDate) {
          showToast('From date must be before To date', 'warning');
          console.error('Invalid date range:', { dateFrom, dateTo });
          container.innerHTML = '<div class="col-span-full text-center py-12 text-gray-400"><i class="fas fa-chart-line text-4xl mb-4 opacity-50"></i><p>Select device and click "Load Data" to display bandwidth charts</p></div>';
          return;
        }
        
        const startISO = startDate.toISOString();
        const endISO = endDate.toISOString();
        
        timeRangeParam = `custom:${startISO},${endISO}`;
        console.log('Custom date range - Valid:', { 
          dateFrom, 
          dateTo, 
          startISO, 
          endISO, 
          timeRangeParam
        });
      }

      // Clear old charts
      Object.values(chartInstances).forEach(chart => chart.destroy());
      chartInstances = {};

      const interfaceSelector = document.getElementById('interface-selector').value;
      
      if (interfaceSelector === 'all' && selectedInterfaces.length > 0) {
        // Load all selected interfaces
        container.innerHTML = '';
        let completed = 0;

        selectedInterfaces.forEach(iface => {
          // Support both old format (string) and new format ({index, name})
          const ifaceName = typeof iface === 'string' ? iface : iface.name;
          
          // Load RX data
          const rxPromise = fetch(`/api/data?device=${encodeURIComponent(currentDevice)}&interface=${encodeURIComponent(ifaceName)}&direction=rx&timeRange=${encodeURIComponent(timeRangeParam)}`)
            .then(response => response.json())
            .catch(err => {
              console.error(`Error loading RX data for ${ifaceName}:`, err);
              return [];
            });
          
          // Load TX data
          const txPromise = fetch(`/api/data?device=${encodeURIComponent(currentDevice)}&interface=${encodeURIComponent(ifaceName)}&direction=tx&timeRange=${encodeURIComponent(timeRangeParam)}`)
            .then(response => response.json())
            .catch(err => {
              console.error(`Error loading TX data for ${ifaceName}:`, err);
              return [];
            });
          
          // Wait for both RX and TX data
          Promise.all([rxPromise, txPromise]).then(([rxData, txData]) => {
            // Only create chart if there's actual data (not all zeros or empty)
            const hasRxData = rxData.length > 0 && rxData.some(d => d.value > 0.0001);
            const hasTxData = txData.length > 0 && txData.some(d => d.value > 0.0001);
            
            if (hasRxData || hasTxData) {
              createInterfaceChart(ifaceName, rxData, txData);
            } else {
              // Skipping chart - no traffic data for this interface
            }
            completed++;
            
            // Show message if no interfaces have data
            if (completed === selectedInterfaces.length) {
              const charts = container.querySelectorAll('.bg-slate-800');
              if (charts.length === 0) {
                container.innerHTML = '<div class="col-span-full text-center py-12 text-gray-400"><i class="fas fa-chart-line text-4xl mb-4 opacity-50"></i><p>No interfaces with traffic data found for the selected time range</p></div>';
              }
            }
          });
        });
      } else if (interfaceSelector !== 'all') {
        // Load specific interface
        container.innerHTML = '';
        
        // Load RX data
        const rxPromise = fetch(`/api/data?device=${encodeURIComponent(currentDevice)}&interface=${encodeURIComponent(interfaceSelector)}&direction=rx&timeRange=${encodeURIComponent(timeRangeParam)}`)
          .then(response => response.json())
          .catch(err => {
            console.error(`Error loading RX data for ${interfaceSelector}:`, err);
            return [];
          });
        
        // Load TX data
        const txPromise = fetch(`/api/data?device=${encodeURIComponent(currentDevice)}&interface=${encodeURIComponent(interfaceSelector)}&direction=tx&timeRange=${encodeURIComponent(timeRangeParam)}`)
          .then(response => response.json())
          .catch(err => {
            console.error(`Error loading TX data for ${interfaceSelector}:`, err);
            return [];
          });
        
        // Wait for both RX and TX data
        Promise.all([rxPromise, txPromise]).then(([rxData, txData]) => {
          const hasRxData = rxData.length > 0 && rxData.some(d => d.value > 0.0001);
          const hasTxData = txData.length > 0 && txData.some(d => d.value > 0.0001);
          
          if (hasRxData || hasTxData) {
            createInterfaceChart(interfaceSelector, rxData, txData);
          } else {
            container.innerHTML = '<div class="col-span-full text-center py-12 text-gray-400"><i class="fas fa-chart-line text-4xl mb-4 opacity-50"></i><p>No traffic data found for this interface in the selected time range</p></div>';
          }
        }).catch(err => {
          console.error('Error loading data:', err);
          container.innerHTML = '<div class="col-span-full text-center py-12 text-red-400"><p>Error loading data</p></div>';
        });
      } else {
        showToast('Please select interfaces from Device Management first', 'warning');
        container.innerHTML = '<div class="col-span-full text-center py-12 text-gray-400"><i class="fas fa-chart-line text-4xl mb-4 opacity-50"></i><p>Select device and click "Load Data" to display bandwidth charts</p></div>';
      }
    }

    // Update header system stats
    function updateHeaderStats() {
      fetch('/api/system-info')
        .then(response => response.json())
        .then(data => {
          if (document.getElementById('header-cpu')) {
            document.getElementById('header-cpu').textContent = data.cpuUsage + '%';
          }
          if (document.getElementById('header-memory')) {
            const memUsedGB = (data.memory.used / 1024 / 1024 / 1024).toFixed(1);
            const memTotalGB = (data.memory.total / 1024 / 1024 / 1024).toFixed(1);
            document.getElementById('header-memory').textContent = `${memUsedGB}/${memTotalGB}GB`;
          }
          if (document.getElementById('header-storage') && data.storage) {
            const storageUsedGB = (data.storage.used / 1024 / 1024 / 1024).toFixed(1);
            const storageTotalGB = (data.storage.total / 1024 / 1024 / 1024).toFixed(1);
            document.getElementById('header-storage').textContent = `${storageUsedGB}/${storageTotalGB}GB`;
          }
        })
        .catch(err => console.error('Error fetching system info:', err));
    }

    // Initial update and periodic refresh
    updateHeaderStats();
    setInterval(updateHeaderStats, 10000); // Update every 10 seconds

    // Generate Professional PDF Report
    async function generatePDFReport() {
      const deviceSelector = document.getElementById('device-selector');
      const interfaceSelector = document.getElementById('interface-selector');
      const timeRangeSelector = document.getElementById('time-range-selector');
      
      if (!currentDevice) {
        showToast('Please select a device first', 'warning');
        return;
      }

      if (Object.keys(chartInstances).length === 0) {
        showToast('Please load data first before generating report', 'warning');
        return;
      }

      showToast('Generating PDF report...', 'info', 5000);

      try {
        const { jsPDF } = window.jspdf;
        const doc = new jsPDF('p', 'mm', 'a4');
        const pageWidth = doc.internal.pageSize.getWidth();
        const pageHeight = doc.internal.pageSize.getHeight();
        const margin = 15;
        let yPosition = margin;

        // Header with gradient background
        doc.setFillColor(30, 41, 59); // slate-900
        doc.rect(0, 0, pageWidth, 45, 'F');
        
        // Logo/Icon circle
        doc.setFillColor(59, 130, 246); // blue-500
        doc.circle(margin + 8, 18, 8, 'F');
        doc.setTextColor(255, 255, 255);
        doc.setFontSize(16);
        doc.setFont(undefined, 'bold');
        doc.text('S', margin + 5.5, 21);

        // Title
        doc.setFontSize(22);
        doc.setFont(undefined, 'bold');
        doc.setTextColor(255, 255, 255);
        doc.text('BANDWIDTH MONITORING REPORT', margin + 25, 20);
        
        // Subtitle
        doc.setFontSize(10);
        doc.setFont(undefined, 'normal');
        doc.setTextColor(203, 213, 225); // slate-300
        doc.text('SNMP Network Performance Analysis', margin + 25, 27);

        // Report metadata box
        doc.setFillColor(51, 65, 85); // slate-700
        doc.roundedRect(margin, 32, pageWidth - (margin * 2), 10, 2, 2, 'F');
        doc.setFontSize(8);
        doc.setTextColor(226, 232, 240); // slate-200
        const reportDate = new Date().toLocaleString('en-US', { 
          year: 'numeric', month: 'short', day: 'numeric',
          hour: '2-digit', minute: '2-digit', second: '2-digit', hour12: false 
        });
        doc.text(`Generated: ${reportDate}`, margin + 3, 38);
        doc.text(`Device: ${deviceSelector.options[deviceSelector.selectedIndex].text}`, pageWidth / 2, 38);
        doc.text(`Time Range: ${timeRangeSelector.options[timeRangeSelector.selectedIndex].text}`, pageWidth - margin - 3, 38, { align: 'right' });

        yPosition = 50;

        // Device Information Section
        doc.setFillColor(248, 250, 252); // slate-50
        doc.rect(margin, yPosition, pageWidth - (margin * 2), 20, 'F');
        doc.setDrawColor(203, 213, 225); // slate-300
        doc.rect(margin, yPosition, pageWidth - (margin * 2), 20);

        doc.setFontSize(12);
        doc.setFont(undefined, 'bold');
        doc.setTextColor(15, 23, 42); // slate-900
        doc.text('DEVICE INFORMATION', margin + 3, yPosition + 6);
        
        doc.setFontSize(9);
        doc.setFont(undefined, 'normal');
        doc.setTextColor(51, 65, 85); // slate-700
        doc.text(`Device ID: ${currentDevice}`, margin + 3, yPosition + 12);
        doc.text(`Device Name: ${deviceSelector.options[deviceSelector.selectedIndex].text}`, margin + 3, yPosition + 17);
        
        const selectedInterface = interfaceSelector.value === 'all' ? 
          `All Interfaces (${selectedInterfaces.length})` : 
          interfaceSelector.options[interfaceSelector.selectedIndex].text;
        doc.text(`Interface: ${selectedInterface}`, pageWidth / 2 + 5, yPosition + 12);
        doc.text(`Report Type: Bandwidth Analysis`, pageWidth / 2 + 5, yPosition + 17);

        yPosition += 28;

        // Statistics Summary Section
        const statsData = await calculateStatistics();
        
        doc.setFillColor(239, 246, 255); // blue-50
        doc.rect(margin, yPosition, pageWidth - (margin * 2), 35, 'F');
        doc.setDrawColor(191, 219, 254); // blue-200
        doc.rect(margin, yPosition, pageWidth - (margin * 2), 35);

        doc.setFontSize(12);
        doc.setFont(undefined, 'bold');
        doc.setTextColor(30, 64, 175); // blue-800
        doc.text('BANDWIDTH STATISTICS', margin + 3, yPosition + 6);

        // Statistics grid
        const statBoxWidth = (pageWidth - (margin * 2) - 9) / 4;
        const statBoxes = [
          { label: 'Peak RX', value: statsData.peakRx, color: [16, 185, 129], icon: '↓' },
          { label: 'Peak TX', value: statsData.peakTx, color: [245, 158, 11], icon: '↑' },
          { label: 'Avg RX', value: statsData.avgRx, color: [59, 130, 246], icon: '↓' },
          { label: 'Avg TX', value: statsData.avgTx, color: [168, 85, 247], icon: '↑' }
        ];

        statBoxes.forEach((stat, index) => {
          const x = margin + 3 + (index * (statBoxWidth + 3));
          const y = yPosition + 12;
          
          doc.setFillColor(255, 255, 255);
          doc.roundedRect(x, y, statBoxWidth, 18, 1, 1, 'F');
          doc.setDrawColor(...stat.color);
          doc.setLineWidth(0.5);
          doc.roundedRect(x, y, statBoxWidth, 18, 1, 1);
          
          doc.setFontSize(8);
          doc.setTextColor(100, 116, 139); // slate-500
          doc.text(stat.label, x + statBoxWidth / 2, y + 5, { align: 'center' });
          
          doc.setFontSize(11);
          doc.setFont(undefined, 'bold');
          doc.setTextColor(...stat.color);
          doc.text(stat.value, x + statBoxWidth / 2, y + 12, { align: 'center' });
          
          doc.setFontSize(7);
          doc.setFont(undefined, 'normal');
          doc.setTextColor(148, 163, 184); // slate-400
          doc.text('Mbps', x + statBoxWidth / 2, y + 16, { align: 'center' });
        });

        yPosition += 43;

        // Charts Section
        doc.setFontSize(12);
        doc.setFont(undefined, 'bold');
        doc.setTextColor(15, 23, 42); // slate-900
        doc.text('BANDWIDTH CHARTS', margin, yPosition);
        yPosition += 8;

        // Add charts to PDF
        const chartKeys = Object.keys(chartInstances);
        let chartCount = 0;

        for (const chartKey of chartKeys) {
          if (yPosition > pageHeight - 80) {
            doc.addPage();
            yPosition = margin;
          }

          const chart = chartInstances[chartKey];
          const chartImageData = chart.toBase64Image();
          
          // Chart title
          const isRx = chartKey.includes('-rx');
          const interfaceName = chartKey.replace('chart-', '').replace('-rx', '').replace('-tx', '').replace(/-/g, ' ');
          const direction = isRx ? 'RX (Download)' : 'TX (Upload)';
          
          doc.setFontSize(10);
          doc.setFont(undefined, 'bold');
          doc.setTextColor(51, 65, 85); // slate-700
          doc.text(`${interfaceName} - ${direction}`, margin, yPosition);
          
          yPosition += 5;
          
          // Add chart image with border
          const chartWidth = pageWidth - (margin * 2);
          const chartHeight = 60;
          
          doc.setDrawColor(203, 213, 225); // slate-300
          doc.setLineWidth(0.3);
          doc.rect(margin, yPosition, chartWidth, chartHeight);
          doc.addImage(chartImageData, 'PNG', margin + 1, yPosition + 1, chartWidth - 2, chartHeight - 2);
          
          yPosition += chartHeight + 8;
          chartCount++;

          // Maximum 4 charts per report to keep it readable
          if (chartCount >= 8) break;
        }

        // Footer on last page
        const footerY = pageHeight - 15;
        doc.setDrawColor(203, 213, 225);
        doc.setLineWidth(0.3);
        doc.line(margin, footerY, pageWidth - margin, footerY);
        
        doc.setFontSize(8);
        doc.setTextColor(100, 116, 139); // slate-500
        doc.text('SMon - SNMP Network Monitoring System', margin, footerY + 5);
        doc.text(`Page ${doc.internal.getNumberOfPages()}`, pageWidth - margin, footerY + 5, { align: 'right' });
        doc.text('© 2025 Network Operations Center', pageWidth / 2, footerY + 5, { align: 'center' });

        // Save PDF
        const filename = `bandwidth-report-${currentDevice}-${new Date().toISOString().split('T')[0]}.pdf`;
        doc.save(filename);
        
        showToast('PDF report generated successfully!', 'success');
      } catch (error) {
        console.error('Error generating PDF:', error);
        showToast('Failed to generate PDF report', 'error');
      }
    }

    // Calculate statistics from chart data
    async function calculateStatistics() {
      const stats = {
        peakRx: '0.00',
        peakTx: '0.00',
        avgRx: '0.00',
        avgTx: '0.00'
      };

      let rxValues = [];
      let txValues = [];

      Object.keys(chartInstances).forEach(key => {
        const chart = chartInstances[key];
        const dataset = chart.data.datasets[0];
        const values = dataset.data.map(d => d.y);
        
        if (key.includes('-rx')) {
          rxValues = rxValues.concat(values);
        } else if (key.includes('-tx')) {
          txValues = txValues.concat(values);
        }
      });

      if (rxValues.length > 0) {
        const maxRx = Math.max(...rxValues);
        const avgRx = rxValues.reduce((a, b) => a + b, 0) / rxValues.length;
        stats.peakRx = maxRx.toFixed(2);
        stats.avgRx = avgRx.toFixed(2);
      }

      if (txValues.length > 0) {
        const maxTx = Math.max(...txValues);
        const avgTx = txValues.reduce((a, b) => a + b, 0) / txValues.length;
        stats.peakTx = maxTx.toFixed(2);
        stats.avgTx = avgTx.toFixed(2);
      }

      return stats;
    }

    // Auto-refresh every 1 minute
    setInterval(loadChartData, 60000);
